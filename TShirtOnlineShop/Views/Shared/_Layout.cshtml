@{
    var customerLogin = (TShirtOnlineShop.Models.Customer)Session["customer"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale = 1.0">
    <link rel="short icon" type="image/png" href="~/Content/images/logo1.png" />
    <title>@ViewBag.Title - HiddenUs</title>

    <link rel="stylesheet" type="text/css" href="~/Content/css/main.css">

    <!--Fonts-->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">

    <!--Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    @RenderSection("css", false)

</head>


<body ng-app="App">

    <div id="logo">
        <a title="Home" href=@Url.Action("HomePage", "Home")><img src="~/Content/images/logo-2.png" alt="png" /></a>
    </div>


    <!--=================================Header==================================-->
    <div id="navbar">
        <ul class="nav-link a">
            <li class="nav-item"><a>@Html.ActionLink("Home", "HomePage", "Home")</a></li>
            <li class="nav-item">
                <a href="#">Men</a>
                <div>
                    <ul>
                        <li><a href="~/Men/LongSleeves">Long Sleeves</a></li>
                        <li><a href="~/Men/ShortSleeves">Short Sleeves</a></li>
                        <li><a href="~/Men/PoloSleeves">Polo</a></li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a href="#">Women</a>
                <div>
                    <ul>
                        <li><a href="~/Women/LongSleeves">Long Sleeves</a></li>
                        <li><a href="~/Women/ShortSleeves">Short Sleeves</a></li>
                        <li><a href="~/Women/PoloSleeves">Polo</a></li>
                        <li><a href="~/Women/Apple">Apple</a></li>
                        <li><a href="~/Women/Croptop">Croptop</a></li>

                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a href="#">Kids</a>
                <div>
                    <ul>
                        <li><a href="~/Child/Girls">Boys</a></li>
                        <li><a href="~/Child/Girls">Girls</a></li>

                    </ul>
                </div>
            </li>
        </ul>

        @using (Html.BeginForm("HomePage", "Home", FormMethod.Post))
        {
            if (customerLogin != null)
            {
                <ul class="nav-link">
                    <li class="nav-item"><a>Hello @customerLogin.CustomerFullName</a></li>
                    <li class="nav-item"><a href=" ~/Order/ShoppingCart"><i class="fa fa-shopping-cart"></i></a></li>
                    <li class="nav-item"><a href=" ~/Home/SearchBar"><i class="fa fa-search"></i></a></li>
                    <li class="nav-item"><a href=" ~/Home/Logout">Log out</a></li>
                </ul>
            }
            else
            {
                <ul class="nav-link">
                    <li class="nav-item"><a href="~/Home/SignIn"> Sign In</a></li>
                    <li class="nav-item"><a href="~/Home/SignUp">Sign Up</a></li>

                    <li class="nav-item"><a href=" ~/Order/ShoppingCart"><i class="fa fa-shopping-cart"></i></a></li>
                    <li class="nav-item"><a href=" ~/Home/SearchBar"><i class="fa fa-search"></i></a></li>
                </ul>
            }
        }

    </div>

    <div id="content">
        @RenderBody()
        <!--=====================Footer======================-->
        <div id="footer">
            <div class="footerOut">
                <div class="footer-left">
                    <h3>Contact us</h3>

                    <p>
                        +86 964 337 650 <br>
                        shop@hiddenusonline.com
                    </p>

                    <div class="footer-icons">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-pinterest"></i></a>
                    </div>
                </div>

                <div class="footer-center">
                    <ul>
                        <h3>Categories</h3>
                        <li class="cal-item"><a href="#">Men T-shirt</a></li>
                        <li class="cal-item"><a href="#">Women T-shirt</a></li>
                        <li class="cal-item"><a href="#">Kids T-shirt</a></li>
                    </ul>

                </div>

                <div class="footer-right">
                    <h3>Sign up for newsletter</h3>

                    <form action="#">

                        <input type="text" name="email" placeholder="Sign up for newsletter" />
                        <button>Send</button>

                    </form>

                </div>

            </div>
            <div class="footer-bottom">
                <div class="footerInner">
                    <p class="footer-company-name">HiddenUs &copy; 2019. All rights reserved.</p>
                </div>
            </div>
        </div>

    </div>

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Content/lib/notify.js"></script>
    <script src="~/Scripts/angular.js"></script>
    @Scripts.Render("~/bundles/angularjs")
    <script src="~/Content/lib/dirPagination.js"></script>
    <script>
        $(document).ready(function () {
            $(document).on("click", "#addCart", function () {
                $("#plus").fadeIn(300);
                $("#plus").fadeOut(700);
            })

            $(document).on("click", "#btnContinue", function () {
                $.notify("Checkout product successlly ", "success");
                setTimeout(function () {
                    window.location.href = "/Home/HomePage";
                }, 2500)
            })

        })
    </script>
</body>
</html>
