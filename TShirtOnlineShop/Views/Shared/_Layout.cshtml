<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale = 1.0">
    <link rel="short icon" type="image/png" href="~/Content/images/logo1.png" />
    <title>@ViewBag.Title - HiddenUs</title>

    <link rel="stylesheet" type="text/css" href="~/Content/css/main.css">

    <!--Fonts-->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">

    <!--Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    @RenderSection("css", false)

</head>


<body ng-app="App">

    <div id="logo">
        <a title="Home" href=@Url.Action("HomePage", "Home")><img src="~/Content/images/logo-2.png" alt="png" /></a>
    </div>


    <!--=================================Header==================================-->
    <div id="navbar">
        <ul class="nav-link a">
            <li class="nav-item"><a>@Html.ActionLink("Home", "HomePage", "Home")</a></li>
            <li class="nav-item">
                <a href="#">Men</a>
                <div>
                    <ul>
                        <li><a href="~/Home/MenLongSleeves">Long Sleeves</a></li>
                        <li><a href="~/Home/MenShortSleeves">Short Sleeves</a></li>
                        <li><a href="~/Home/MenPolo">Polo</a></li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a href="#">Women</a>
                <div>
                    <ul>
                        <li><a href="#">Long sleeves</a></li>
                        <li><a href="#">Short sleeves</a></li>
                        <li><a href="#">Polo</a></li>
                        <li><a href="#">Apple</a></li>
                        <li><a href="#">Croptop</a></li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a href="#">Kids</a>
                <div>
                    <ul>
                        <li><a href="#">Boys</a></li>
                        <li><a href="#">Girls</a></li>
                    </ul>
                </div>
            </li>
        </ul>

        @using (Html.BeginForm("HomePage", "Home", FormMethod.Post))
        {
            if (Session["CustomerFullName"] != null)
            {
                <ul class="nav-link">
                    <li class="nav-item"><a>Hello @Session["CustomerFullName"].ToString()</a></li>
                    <li class="nav-item"><a href=" ~/Home/ShoppingCart"><i class="fa fa-opencart"></i></a></li>
                    <li class="nav-item"><a href=" ~/Home/SearchBar"><i class="fa fa-search"></i></a></li>
                </ul>
            }
            else
            {
                <ul class="nav-link">
                    <li class="nav-item"><a href="~/Home/SignIn"> Sign In</a></li>
                    <li class="nav-item"><a href="~/Home/SignUp">Sign Up</a></li>

                    <li class="nav-item"><a href=" ~/Order/ShoppingCart"><i class="fa fa-shopping-cart"></i></a></li>
                    <li class="nav-item"><a href=" ~/Home/SearchBar"><i class="fa fa-search"></i></a></li>
                </ul>
            }
        }

    </div>

    <div id="content">
        @RenderBody()
        <!--=====================Footer======================-->
        <div id="footer">
            <div class="footerOut">
                <div class="footer-left">
                    <h3>Contact us</h3>

                    <p>
                        +86 964 337 650 <br>
                        shop@hiddenusonline.com
                    </p>

                    <div class="footer-icons">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-pinterest"></i></a>
                    </div>
                </div>

                <div class="footer-center">
                    <ul>
                        <h3>Categories</h3>
                        <li class="cal-item"><a href="#">Men T-shirt</a></li>
                        <li class="cal-item"><a href="#">Women T-shirt</a></li>
                        <li class="cal-item"><a href="#">Kids T-shirt</a></li>
                    </ul>

                </div>

                <div class="footer-right">
                    <h3>Sign up for newsletter</h3>

                    <form action="#">

                        <input type="text" name="email" placeholder="Sign up for newsletter" />
                        <button>Send</button>

                    </form>

                </div>

            </div>
            <div class="footer-bottom">
                <div class="footerInner">
                    <p class="footer-company-name">HiddenUs &copy; 2019. All rights reserved.</p>
                </div>
            </div>
        </div>

    </div>

    @RenderSection("scripts", required: false)
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    <script src="~/Content/lib/dirPagination.js"></script>
    @RenderSection("angularjs", required: false)
</body>
</html>
